@model IEnumerable <AppIFES.Models.Agenda>
@using GridMvc.Html

@{
    ViewBag.Title = "Index";
}

<center><h2>Cadastro de Agenda</h2></center>
<p>
    @Html.ActionLink("Novo", "Create", new { id = ViewBag.idIndex }, new { @class = "btn btn-primary" })
</p>
<div class="table-responsive">
    @Html.Grid(Model).Columns(columns =>
{
columns.Add(col => col.idagenda, true);
columns.Add(col => col.Disciplina.descricao).Titled("Grupo").Filterable(true).Sortable(true);
columns.Add(col => col.dataevento).Titled("Data dos Eventos").Sortable(true);
columns.Add(col => col.titulo).Titled("Titulo").Filterable(true).Sortable(true);
columns.Add(col => col.descricao).Titled("Descrição").Sortable(true);
columns.Add(col => col.local).Titled("Local").Sortable(true);
columns.Add().Encoded(false).Sanitized(false)
.RenderValueAs(col =>
@<b>
    @Html.ActionLink("Alterar", "Edit", new { Id = col.idagenda }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Detalhar", "Details", new { id = col.idagenda }, new { @class = "btn btn-success" })
    @Html.ActionLink("Apagar", "Delete", new { id = col.idagenda }, new { @class = "btn btn-danger" })
</b>);

 }
    ).SetLanguage("br").WithPaging(8)
</div>


