@model IEnumerable<AppIFES.Models.Usuario>

@{
    ViewBag.Title = "Cadastro de Usuários";
}

<center><h2>Cadastro de Usuários</h2></center>

<p>
    @Html.ActionLink(" ", "Create", new { area = "" }, new { @class = "glyphicon glyphicon-plus btn btn-primary", @title = "Criar novo usuário" })
</p>
<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.supervisor)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.simnao.descricao)
                </td>
                <td>
                    @Html.ActionLink(" " , "Edit", new { id = item.idusuario }, new { @class = "glyphicon glyphicon-edit btn btn-warning btn-sm", @title = "Editar usário" })
                    @Html.ActionLink(" ", "Details", new { id = item.idusuario }, new { @class = "glyphicon glyphicon-list-alt btn btn-success btn-sm", @title = "Detalhar usuários" })
                    @Html.ActionLink(" "  , "Delete", new { id = item.idusuario }, new { @class = "glyphicon glyphicon-trash btn btn-danger btn-sm", @title = "Excluir usário" })
                </td>
            </tr>
        }

    </table>
</div>