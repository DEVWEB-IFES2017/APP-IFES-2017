@model IEnumerable<AppIFES.Models.Disciplina>

@{
    ViewBag.Title = "Cadastro de Grupos";
}

<h2>Cadastro de Grupos</h2>

<p>
    @Html.ActionLink("Novo", "Create", new { area = "" }, new { @class = "btn btn-primary" })
</p>
<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idusuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descricao)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.usuario.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descricao)
                </td>
                <td>
                    @Html.ActionLink("Alterar", "Edit", new { id = item.iddisciplina }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Detalhar", "Details", new { id = item.iddisciplina }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Apagar", "Delete", new { id = item.iddisciplina }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>