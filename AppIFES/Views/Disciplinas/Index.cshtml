@model IEnumerable<AppIFES.Models.Disciplina>
@using GridMvc.Html

@{
    ViewBag.Title = "Cadastro de Grupos";
}

<center><h2>Cadastro de Grupos</h2></center>

<p>
    @Html.ActionLink("Novo", "Create", new { area = "" }, new { @class = "btn btn-primary" })
</p>
<div class="table-responsive">
    @Html.Grid(Model).Columns(columns =>
{
columns.Add(col => col.idusuario, true);
columns.Add(col => col.usuario.nome).Titled("Responsavel").Filterable(true).Sortable(true);
columns.Add(col => col.descricao).Titled("Grupo").Filterable(true).Sortable(true);
columns.Add().Encoded(false).Sanitized(false)
.RenderValueAs(col =>
        @<b>
            @Html.ActionLink("Alterar", "Edit", new { Id = col.iddisciplina }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Detalhar", "Details", new { id = col.iddisciplina }, new { @class = "btn btn-success" })
            @Html.ActionLink("Apagar", "Delete", new { id = col.iddisciplina }, new { @class = "btn btn-danger" })
        </b>);

}
    ).SetLanguage("br").WithPaging(8)
</div>


<script>
