@model IEnumerable<AppIFES.Models.Disciplina>

@{
    ViewBag.Title = "Cadastro de Grupos";
}

<center><h2>Cadastro de Grupos</h2></center>

<p>
    @Html.ActionLink(" ", "Create", new { area = "" }, new { @class = "btn btn-primary glyphicon glyphicon-plus", @title = "Criar nova disciplina",  })
</p>
<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idusuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descricao)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.usuario.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descricao)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.iddisciplina }, new { @class = "glyphicon glyphicon-edit btn btn-warning btn-sm", @title = "Editar disciplina" })
                    @Html.ActionLink(" ", "Details", new { id = item.iddisciplina }, new { @class = "glyphicon glyphicon-list-alt btn btn-success btn-sm", @title = "Detalhar disciplinas" })
                    @Html.ActionLink(" ", "Delete", new { id = item.iddisciplina }, new { @class = "glyphicon glyphicon-trash btn btn-danger btn-sm", @title = "Excluir disciplina" })
                </td>
            </tr>
        }

    </table>
</div>