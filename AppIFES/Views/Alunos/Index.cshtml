@model IEnumerable<AppIFES.Models.Aluno>
@using GridMvc.Html

@{
    ViewBag.Title = "Cadastro de Aluno";
}

<center><h2>Cadastro de Aluno</h2></center>

<p>
    @Html.ActionLink("Novo", "Create", new { area = "" }, new { @class = "btn btn-primary" })
</p>
<div class="table-responsive">
    @Html.Grid(Model).Columns(columns =>
{
columns.Add(col => col.idaluno, true);
columns.Add(col => col.nome).Titled("Nome").Filterable(true).Sortable(true);
columns.Add(col => col.email).Titled("Email").Sortable(true);
columns.Add().Encoded(false).Sanitized(false)
.RenderValueAs(col =>
        @<b>
            @Html.ActionLink("Alterar", "Edit", new { Id = col.idaluno }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Detalhar", "Details", new { id = col.idaluno }, new { @class = "btn btn-success" })
            @Html.ActionLink("Apagar", "Delete", new { id = col.idaluno }, new { @class = "btn btn-danger" })
            @Html.ActionLink("Grupos", "Index", "Alunodisciplinas", new { id = col.idaluno }, new { @class = "btn btn-info" })
        </b>);

}
    ).SetLanguage("br").WithPaging(8)
</div>


<script>
