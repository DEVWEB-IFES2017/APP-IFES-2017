@model IEnumerable<AppIFES.Models.Aluno>
@using GridMvc.Html

@{
    ViewBag.Title = "Cadastro de Aluno";
}

<center><h2>Cadastro de Aluno</h2></center>

<p>
    @Html.ActionLink(" ", "Create", new { area = "" }, new { @class = "glyphicon glyphicon-plus btn btn-primary" })
</p>
<div class="table-responsive">
    @Html.Grid(Model).Columns(columns =>
{
columns.Add(col => col.idaluno, true);
columns.Add(col => col.nome).Titled("Nome").Filterable(true).Sortable(true);
columns.Add(col => col.email).Titled("Email").Sortable(true);
columns.Add().Encoded(false).Sanitized(false)
.RenderValueAs(col =>
        @<b>
             @Html.ActionLink(" ", "Edit", new { id = col.idaluno }, new { @class = "glyphicon glyphicon-edit btn btn-warning btn-sm" })
             @Html.ActionLink(" ", "Details", new { id = col.idaluno }, new { @class = "glyphicon glyphicon-list-alt btn btn-success btn-sm" })
             @Html.ActionLink(" ", "Delete", new { id = col.idaluno }, new { @class = "glyphicon glyphicon-trash btn btn-danger btn-sm" })
             @Html.ActionLink(" ", "Index", "Alunodisciplinas", new { id = col.idaluno }, new { @class = "glyphicon glyphicon-th btn btn-info btn-sm" })
        </b>);

}
    ).SetLanguage("br").WithPaging(8)
</div>

<script>
    $(function () {
        pageGrids.ordersGrid.onRowSelect(function (e) {
            //alert(e.row.nome);
        });
    });
</script>