@model AppIFES.Models.Alunodisciplina

@{
    ViewBag.Title = "Apagar Grupo do Aluno";
}


<h3>Tem certeza que deseja deletar o Grupo do Aluno?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.idaluno)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.aluno.nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.iddisciplina)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.disciplina.descricao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Confirmar" class="btn btn-success" />
            @Html.ActionLink("Cancelar", "Index", new { id = ViewBag.idDelete }, new { @class = "btn btn-danger" })
        </div>
    }
</div>
